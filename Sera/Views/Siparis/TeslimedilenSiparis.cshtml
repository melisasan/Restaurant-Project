@using Sera.Entity
@model IEnumerable<Order>
@{
    ViewBag.Title = "TeslimedilenSiparis";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title"> Teslim Edilen Sipariş Listesi</h3>
                </div>

                <div class="box-body">
                    <table id="example1" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>Sipariş Id</th>
                                <th>Sipariş Numarası</th>
                                <th>Sipariş Tarihi</th>
                                <th>Sipariş Durumu</th>
                                <th>Toplam Fiyat (₺)</th>
                                <th></th>

                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Id </td>
                                    <td>
                                        @item.OrderNumber
                                    </td>
                                    <td>
                                        @item.OrderDate
                                    <td>
                                        @item.SiparisDurumu
                                    </td>
                                    <td>
                                        @item.Total
                                    </td>
                                    <td><a class="btn btn-primary"< href="@Url.Action("Details",new { id = item.Id })"><i class="fa fa-fw fa-edit"></i>Sipariş Detay</td>
                                </tr>

                            }


                        </tbody>
                        <tfoot>
                            <tr>
                                <th>Sipariş Id</th>
                                <th>Sipariş Numarası</th>
                                <th>Sipariş Tarihi</th>
                                <th>Sipariş Durumu</th>
                                <th>Toplam Fiyat (₺)</th>
                                <th></th>

                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>


