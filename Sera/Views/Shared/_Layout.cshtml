<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">
    <!-- Bootstrap styles -->
    <link href="/site/assets/css/bootstrap.css" rel="stylesheet" />
    <!-- Customize styles -->
    <link href="/site/style.css" rel="stylesheet" />
    <!-- font awesome styles -->
    <link href="/site/assets/font-awesome/css/font-awesome.css" rel="stylesheet">
    <!--[if IE 7]>
        <link href="css/font-awesome-ie7.min.css" rel="stylesheet">
    <![endif]-->
    <!--[if lt IE 9]>
        <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->
    <!-- Favicons -->
    <link rel="shortcut icon" href="/site/assets/ico/favicon.ico">
</head>
<body>
    <!--
        Upper Header Section
    -->
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="topNav">
            <div class="container">
                <div class="pull-left ">
                    <a href="/Home/Index">
                        <img src="~/Content/Images/LOGO.png" class="logo" alt="SeraRestoran" width="230" height="50" />
                    </a>
                </div>
                <div class="alignR">
                    @Html.Action("SummaryUst", "Cart")
                </div>
            </div>
        </div>
    </div>


    <!--
    Lower Header Section
    -->
    <div class="container">
        <header id="header">
        </header>

        <!--
        Navigation Bar Section
        -->
        <div class="navbar">
            <div class="navbar-inner">
                <div class="container">
                    <a data-target=".nav-collapse" data-toggle="collapse" class="btn btn-navbar">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </a>
                    <div class="nav-collapse">
                        <ul class="nav">
                            <li class="active"><a href="/Home/Index"><span class="icon-home"></span>AnaSayfa</a></li>
                            <li class="active"><a href="/Home/Hakkimizda"><span class="icon-info-sign"></span>Hakkımızda</a></li>
                            <li class="active"><a href="/Home/Iletisim"><span class="icon-phone-sign"></span> Iletişim</a></li>

                        </ul>

                        @Html.Partial("GirisPartial")
                    </div>
                </div>
            </div>
        </div>

        @RenderBody()

        <!--
        Footer


        -->
        <footer class="footer">
            <div class="row-fluid">
                <!--Arama
                ==================== -->
                <div class="span1"></div>
                <div class="span3">
                    <h3>Arama</h3>
                    <div>
                    @Html.Partial("Arama") 
                    </div>

                </div>


                <!-- Arama
                ==================== -->
                <!-- Hizmet Gunleri
                ==================== -->

                <div class="span3">
                    <article>
                        <h3>Hizmet Günleri</h3>

                        <div class="span2">
                            <img src="~/Content/Images/7-24.jpg" class=" img-circle" width="70" height="70">
                        </div>
                        <p>
                            Restoran açıldığı ilk günden beri her daim müşterilerine hizmeti sağlamıştır. Restoranımız online siparişlerinize haftanın her günü 24 saat hizmet vermektedir.
                        </p>
                        <hr class="vertical-space2">
                    </article>
                </div>
                <!-- Hizmet Gunleri
                ==================== -->
                <!-- İletisim Bilgileri
                ==================== -->
                <div class="span3">

                    <h3>Iletişim Bilgileri</h3>
                    <ul class="list-group">
                        <li class="list-group-item address"><span class="contactItemIcon"><i class="icomoon-location-5"></i></span>Address:Kurtuluş, 01130 Seyhan</li>
                        <li class="list-group-item phone"><span class="contactItemIcon"><i class="icomoon-phone-4"></i></span>Phone: +90322467349</li>
                        <li class="list-group-item fax"><span class="contactItemIcon"><i class="icomoon-phone"></i></span>Fax: +135 6084218</li>
                        <li class="list-group-item email"><span class="contactItemIcon"><i class="icomoon-envelop"></i></span>Email: info@serarestoranadana.com</li>

                    </ul>
                    <hr class="vertical-space2">

                </div>
                <!-- İletisim Bilgileri
                ==================== -->

            </div>
        </footer>
    </div>

    <script src="/site/assets/js/jquery.js"></script>
    <script src="/site/assets/js/bootstrap.min.js"></script>
    <script src="/site/assets/js/jquery.easing-1.3.min.js"></script>
    <script src="/site/assets/js/jquery.scrollTo-1.4.3.1-min.js"></script>
    <script src="/site/assets/js/shop.js"></script>
</body>
</html>