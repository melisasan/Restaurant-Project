        </div>



        @Html.Action("_OneCikanList", "Home")

    </div>
    <div class="span9">
        <div class="well np">
            <div id="myCarousel" class="carousel slide homCar">
                <div class="carousel-inner">
                    <div class="item">
                        <img style="width:100%; max-width:698px; max-height:327px; min-height:327px; min-width:698px" src="~/Content/Images/serarestoran.png" alt="bootstrap ecommerce templates">
                        <div class="carousel-caption">
                            <h4>Vazgeçilmez Lezzet</h4>
                            <p><span>Sevdiğiniz lezzet bir tık kadar uzağınızda</span></p>
                        </div>
                    </div>
                    <div class="item">
                        <img style="width:100%; max-width:698px; max-height:327px; min-height:327px; min-width:698px" src="~/Content/Images/hamburger.jpg" alt="bootstrap ecommerce templates">
                        <div class="carousel-caption">
                            <h4>En Sevdiğiniz Yemekler</h4>
                            <p><span>Müşterilerinde tam puan alan Sera Restoran her daim hizmetinize hazır</span></p>
                        </div>
                    </div>
                    <div class="item active">
                        <img style="width:100%; max-width:698px; max-height:327px; min-height:327px; min-width:698px" src="~/Content/Images/pizza.jpg" alt="bootstrap ecommerce templates">
                        <div class="carousel-caption">
                            <h4>7/24 Açık!</h4>
                            <p><span>Canınız ne zaman çekerse çeksin biz hep açığız.</span></p>
                        </div>
                    </div>
                </div>
                <a class="left carousel-control" href="#myCarousel" data-slide="prev">&lsaquo;</a>
                <a class="right carousel-control" href="#myCarousel" data-slide="next">&rsaquo;</a>
