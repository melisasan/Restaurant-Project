@model IEnumerable<Sera.Entity.Urun>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Ürün Listesi</h3>
                </div>
                <br />
                <a class="btn btn-primary btn-block" href="@Url.Action("Create")">Yeni Kayıt</a>
                </br>
                <div class="box-body">
                    <table id="example1" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>Resim</th>
                                <th>Adı</th>
                                <th>Onaylı</th>
                                <th>Anasayfa</th>
                                <th>Popüler</th>
                                <th>Kategori Adı</th>
                                <th></th>

                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var item in Model)
                            {
                            <tr>
                                <td><img src="~/Content/Images/@item.Resim" width="80" height="60" /> </td>
                                <td>
                                    @item.Ad
                                </td>
                                <td>
                                    @if (item.SatistaMi)
                                    {
                                        <label class="label label-success"><i class="fa fa-fw fa-check-circle-o"></i>Evet</label>
                                    }
                                    else
                                    {
                                        <label class="label label-danger"><i class="fa fa-fw fa-times-circle-o"></i>Hayır</label>
                                    }
                                </td>
                                <td>
                                    @if (item.AnasayfadaMi)
                                    {
                                        <label class="label label-success"><i class="fa fa-fw fa-check-circle-o"></i>Evet</label>
                                    }
                                    else
                                    {
                                        <label class="label label-danger"><i class="fa fa-fw fa-times-circle-o"></i>Hayır</label>
                                    }
                                </td>
                                <td>
                                    @if (item.OneCikan)
                                    {
                                        <label class="label label-success"><i class="fa fa-fw fa-check-circle-o"></i>Evet</label>
                                    }
                                    else
                                    {
                                        <label class="label label-danger"><i class="fa fa-fw fa-times-circle-o"></i>Hayır</label>
                                    }
                                </td>
                                <td>
                                    @item.Kategori.Ad
                                </td>
                                <td><a class="btn btn-primary"< href="@Url.Action("Edit",new { id = item.Id })"><i class="fa fa-fw fa-edit"></i>Düzenle</td>
                                <td><a class="btn btn-danger"< href="@Url.Action("Delete",new { id = item.Id })"><i class="fa fa-fw fa-trash-o"></i>Sil</td>
                            </tr>

                            }


                        </tbody>
                        <tfoot>
                            <tr>
                                <th>Resim</th>
                                <th>Adı</th>
                                <th>Onaylı</th>
                                <th>Anasayfa</th>
                                <th>Popüler</th>
                                <th>Kategori Adı</th>
                                <th></th>

                            </tr>
                        </tfoot>
                    </table>
                </div><!-- /.box-body -->
            </div><!-- /.box -->
        </div><!-- /.col -->
    </div><!-- /.row -->
</section>
