@model Sera.Models.DurumModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<section class="content">
    <div class="row">

        @Html.Action("UserCount","Account")

        <div class="col-lg-3 col-xs-6">
            
            <div class="small-box bg-aqua">
                <div class="inner">
                    <h3>@Model.UrunSayisi</h3>
                    <p>Toplam Ürün Sayısı</p>
                </div>
                <div class="icon">
                    <i class="ion ion-bag"></i>
                </div>
                <a href="/Urun/Index" class="small-box-footer">Ayrıntılar <i class="fa fa-arrow-circle-right"></i></a>
            </div>
        </div>
        <div class="col-lg-3 col-xs-6">
            
            <div class="small-box bg-green">
                <div class="inner">
                    <h3>@Model.SiparisSayisi</h3>
                    <p>Toplam Sipariş Sayısı</p>
                </div>
                <div class="icon">
                    <i class="ion ion-stats-bars"></i>
                </div>
                <a href="/Siparis/Index" class="small-box-footer">Ayrıntılar <i class="fa fa-arrow-circle-right"></i></a>
            </div>
        </div>
        <div class="col-lg-3 col-xs-6">
           
            <div class="small-box bg-yellow">
                <div class="inner">
                    <h3>@Model.BekleyenSiparisSayisi</h3>
                    <p>Bekleyen Sipariş Sayısı</p>
                </div>
                <div class="icon">
                    <i class="ion ion-person-add"></i>
                </div>
                <a href="/Siparis/BekleyenSiparis" class="small-box-footer">Ayrıntılar <i class="fa fa-arrow-circle-right"></i></a>
            </div>
        </div>
        <div class="col-lg-3 col-xs-6">

            <div class="small-box bg-red">
                <div class="inner">
                    <h3>@Model.TamamlananSiparisSayisi</h3>
                    <p>Tamamlanan Sipariş Sayısı</p>
                </div>
                <div class="icon">
                    <i class="ion ion-pie-graph"></i>
                </div>
                <a href="/Siparis/TamamlananSiparis" class="small-box-footer">Ayrıntılar <i class="fa fa-arrow-circle-right"></i></a>
            </div>
        </div>
        <div class="col-lg-3 col-xs-6">

            <div class="small-box bg-red">
                <div class="inner">
                    <h3>@Model.YoldaSiparisSayisi</h3>
                    <p>Yolda Olan Sipariş Sayısı</p>
                </div>
                <div class="icon">
                    <i class="ion ion-pie-graph"></i>
                </div>
                <a href="/Siparis/YoldaSiparis" class="small-box-footer">Ayrıntılar <i class="fa fa-arrow-circle-right"></i></a>
            </div>
        </div>
        <div class="col-lg-3 col-xs-6">

            <div class="small-box bg-red">
                <div class="inner">
                    <h3>@Model.TeslimedilenSiparisSayisi</h3>
                    <p>Teslim Edilen Sipariş Sayısı</p>
                </div>
                <div class="icon">
                    <i class="ion ion-pie-graph"></i>
                </div>
                <a href="/Siparis/TeslimedilenSiparis" class="small-box-footer">Ayrıntılar <i class="fa fa-arrow-circle-right"></i></a>
            </div>
        </div>
    </div>

</section>